	<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_ZuluRifle</defName>
    <label>breech-loading rifle</label>
    <description>Single shot breech-loading rifle.\n\nOlder than the bolt action but don't let it's age fool you. It'll still stop a Muffalo dead in it's tracks.</description>
    <graphicData>
      <texPath>Rifles/Zulurifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<weaponClasses>
      <li>LongShots</li>
		<li>Ranged</li>
    </weaponClasses>
		<equippedAngleOffset>45</equippedAngleOffset>

    <statBases>
      <MarketValue>150</MarketValue>
      <WorkToMake>28000</WorkToMake>
	  <Mass>3.8</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.86</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>20</Steel>
	  <WoodLog>10</WoodLog>
	  <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    
	<recipeMaker>
	  <researchPrerequisite>Smithing</researchPrerequisite> 
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
	  <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
	
	<weaponTags>
		<li>ammo_rifle/30</li>
		<li>NeolithicRangedHeavy</li>
		<li>NeolithicRangedChief</li>
    </weaponTags>
	
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_RifleZulu</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>39.9</range>
        <soundCast>3006rifle_shot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
