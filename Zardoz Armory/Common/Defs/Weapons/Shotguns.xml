        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  
  
