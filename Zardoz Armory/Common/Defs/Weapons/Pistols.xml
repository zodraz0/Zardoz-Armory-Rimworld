<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_Pistol</defName>
        <label>pistol bullet</label>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>10</damageAmountBase>
            <armorPenetrationBase>0.15</armorPenetrationBase>
            <stoppingPower>1.2</stoppingPower>
            <speed>40</speed>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_Revolver</defName>
        <label>revolver bullet</label>
        <graphicData>
            <texPath>Things/Projectile/Bullet_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>12</damageAmountBase>
            <armorPenetrationBase>0.15</armorPenetrationBase>
            <stoppingPower>1.5</stoppingPower>
            <speed>40</speed>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_Revolver</defName>
        <label>revolver</label>
        <description>Some people just like the classics.\n\nRough, Rugged, above all Reliable, the Revolver that won the Rim. It needs no further introduction.</description>
        <techLevel>Industrial</techLevel>
        <smeltable>true</smeltable>
        <tickerType>Normal</tickerType>
        <thingCategories>
            <!-- <li>WeaponsRanged</li> -->
        </thingCategories>
        <graphicData>
            <texPath>Pistols/SAA</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.7</drawSize>
        </graphicData>
        <uiIconScale>1.4</uiIconScale>
        <equippedAngleOffset>0</equippedAngleOffset>
        <soundInteract>Interact_Revolver</soundInteract>
        <statBases>
            <MarketValue>100</MarketValue>
            <WorkToMake>5000</WorkToMake>
            <Mass>1.2</Mass>
            <AccuracyTouch>0.90</AccuracyTouch>
            <AccuracyShort>0.80</AccuracyShort>
            <AccuracyMedium>0.40</AccuracyMedium>
            <AccuracyLong>0.30</AccuracyLong>
            <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>30</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <researchPrerequisite>Smithing</researchPrerequisite>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
        </recipeMaker>

        <weaponTags>
            <li>SimpleGun</li>
            <li>RevolverGun</li>
			<li>SIBGun</li>

            <li>ammo_pistol/80</li>
        </weaponTags>
		<weaponClasses>
            <li>RangedLight</li>
			<li>ShortShots</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Revolver</defaultProjectile>
                <warmupTime>0.2</warmupTime>
                <range>23.9</range>
                <soundCast>revolver_shot</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.9</cooldownTime>
            </li>
        </tools>
    </ThingDef>


    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_Autopistol</defName>
        <label>pistol</label>
        <description>An ancient pattern self-loading pistol. These have mostly replaced revolvers for self defense. It lacks stopping power and range, but is quick to fire.</description>
        <graphicData>
            <texPath>Pistols/92FS</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.6</drawSize>
        </graphicData>
        <uiIconScale>1.5</uiIconScale>
        <soundInteract>Interact_Autopistol</soundInteract>
        <recipeMaker>
            <researchPrerequisite>BlowbackOperation</researchPrerequisite>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <weaponTags>
            <li>SimpleGun</li>
            <li>ammo_pistol/100</li>
        </weaponTags>
        <weaponClasses>
            <li>RangedLight</li>
			<li>ShortShots</li>
        </weaponClasses>
        <statBases>
		    <MarketValue>150</MarketValue>

            <WorkToMake>10000</WorkToMake>
            <Mass>1.2</Mass>
            <AccuracyTouch>0.90</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.40</AccuracyMedium>
            <AccuracyLong>0.30</AccuracyLong>
            <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>30</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Autopistol</defaultProjectile>
                <warmupTime>0.3</warmupTime>
                <range>23.9</range>
                <soundCast>9mmpistol_shot</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_MachinePistol</defName>
        <label>machine pistol</label>
        <description>A micro-submachine gun. It is short-ranged, but very light in the hands. Its rate of fire tends to make up for its weakness.</description>
        <graphicData>
            <texPath>Pistols/93R</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.6</drawSize>
        </graphicData>
        <uiIconScale>1.4</uiIconScale>
        <soundInteract>Interact_SMG</soundInteract>
        <weaponClasses>
            <li>RangedLight</li>
            <li>ShortShots</li>
        </weaponClasses>
        <recipeMaker>
            <researchPrerequisite>BlowbackOperation</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
				            <MarketValue>250</MarketValue>

            <WorkToMake>25000</WorkToMake>
            <Mass>2.5</Mass>
            <AccuracyTouch>0.90</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.35</AccuracyMedium>
            <AccuracyLong>0.15</AccuracyLong>
